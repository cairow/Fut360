@model List<LocalModel>

@{
    ViewData["Title"] = "Locais Disponíveis";
}

<div class="text-center">
    
    <div class="mx-auto p-2">
        <a class="btn btn-primary" role="button" asp-controller="Local" asp-action="Create">Adicionar Local</a>
    </div>
 
    </br>
  
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">

            <div class="carousel-inner">
            @if (Model != null && Model.Any())
            {
                @foreach (LocalModel local in Model)
                {
                    <div class="carousel-item active">
                        <div class="card">
                            <div class="ratio ratio-1x1"><img src="~/fotos/@local.ImagemLocal" class="d-block w-100" alt="..."> </div>
                            <div class="card-body">
                                <h5 class="card-title">@local.Nome</h5>
                                <p class="card-text">@local.Endereco</p>
                                <a role="button" class="btn btn-primary" asp-route-id="@local.Id" asp-controller="Agendamento" asp-action="Create">Agendar</a>
                            </div>
                        </div>
                    </div>
                }
            }
              
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
         </div>
               

    </br>
    </br>

    <table class="table" id="table-locais">
        <thead class="table-dark">
            <tr>

                <th scope="col">Nome</th>
                <th scope="col">Endereço</th>
                <th scope="col">Horários</th>
                <th scope="col">Tipo de Pagamentos</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {

                foreach (LocalModel local in Model)

                {
                    <tr>
                        <td>@local.Nome</td>
                        <td>@local.Endereco</td>
                        <td>@local.Horario</td>
                        <td>@local.Pagamento</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-info" asp-route-id="@local.Id" asp-controller="Agendamento"
                                    asp-action="Create">Agendar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
