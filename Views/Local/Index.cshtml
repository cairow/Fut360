@model List<LocalModel>

@{
    ViewData["Title"] = "Locais Disponíveis";
}


<div class="text-center">
 
    <div class="mx-auto p-2">
        <a class="btn btn-primary" role="button" asp-controller="Local" asp-action="Create">Adicionar Local</a>
    </div>
    
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br/>

    <table class="table" id="table-locais">
        <thead class="table-dark">
            <tr>
      
                <th scope="col">Nome</th>
                <th scope="col">Endereço</th>
                <th scope="col">Horários</th>
                <th scope="col">Tipo de Pagamentos</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (LocalModel local in Model)
                { 
                <tr>

                        <td>@local.Nome</td>
                        <td>@local.Endereco</td>
                        <td>@local.Horario</td>
                        <td>@local.Pagamento</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@local.Id" asp-controller="Local" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@local.Id" asp-action="Delete">Exluir</a>
                            </div>
                        </td>
                    
                ></tr>
                }
            }
        </tbody>
    </table>
</div>
