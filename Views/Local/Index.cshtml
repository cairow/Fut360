@model List<LocalModel>

@{
    ViewData["Title"] = "Locais Disponíveis";
}


<div class="text-center">
 
    <div class="mx-auto p-2">
        <a class="btn btn-primary" role="button" asp-controller="Local" asp-action="Create">Adicionar Local</a>
    </div>

    <div class="row">
          @if (Model != null && Model.Any())
            {
                foreach (LocalModel local in Model)
            {
                <div class="card" style="width: 18rem;">
                    <img src="~/images/fut_ind.jpg" class="card-img-top"/>
                    <div class="card-body">
                        <h5 class="card-title">@local.Nome</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@local.Endereco</li>
                        <li class="list-group-item">@local.Horario</li>
                        <li class="list-group-item">@local.Pagamento</li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="btn btn-primary">Reservar</a>
                    </div>
                </div>
            }

          }
    </div>

    <br/>

    <table class="table" id="table-locais">
        <thead class="table-dark">
            <tr>
      
                <th scope="col">Nome</th>
                <th scope="col">Endereço</th>
                <th scope="col">Horários</th>
                <th scope="col">Tipo de Pagamentos</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (LocalModel local in Model)
                { 
                <tr>

                        <td>@local.Nome</td>
                        <td>@local.Endereco</td>
                        <td>@local.Horario</td>
                        <td>@local.Pagamento</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@local.Id" asp-controller="Local" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@local.Id" asp-action="Delete">Exluir</a>
                                <a role="button" class="btn btn-info" asp-route-id="@local.Id" asp-controller="Agendamento" asp-action="Create">Agendar</a>
                            </div>
                        </td>
                    
                </tr>
                }
            }
        </tbody>
    </table>
</div>