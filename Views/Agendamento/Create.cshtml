@model Fut360.Models.AgendamentoModel

@{
    ViewData["Title"] = "Realizar um agendamento";
}
<h1>RESERVAR</h1>
<h4>Realizar a reserva do horário:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Agendamento" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="localModel.Nome" class="control-label"></label>
                <input asp-for="localModel.Nome" class="form-control" />
                <span asp-validation-for="localModel.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="data">Data</label>
                <input type="date" class="form-control" id="data" name="data" value="2023-11-01" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

