@model Fut360.Models.AgendamentoModel

@{
    ViewData["Title"] = "Realizar um agendamento";
}


<h1>RESERVAR</h1>
<h4>Realizar a reserva:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Agendamento" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" id="localModel" name="localModel" asp-for="Id" />
           
            <div class="form-group">
                <label for="DataHoraInicial">Data e Horário de Início:</label>
                <input type="datetime-local" class="form-control" id="DataHoraInicial" name="DataHoraInicial" />
            </div>
            <div class="form-group">
                <label for="DataHoraFinal">Data e Horário de Término:</label>
                <input type="datetime-local" class="form-control" id="DataHoraFinal" name="DataHoraFinal" />
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>






<div>
    <a asp-action="Index">Back to List</a>
</div>

