@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "USERS";
}

<div class="text-center">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <div class="d-flex align-items-center">
                            <p class="mb-0 text-uppercase">USERS</p>
                        </div>
                        <div>
                            <a role="button" class="btn btn-primary btn-sm ms-auto" asp-controller="Account" asp-action="Register" class="btn btn-sm btn-danger">Novo Usuário</a>
                            <a role="button" class="btn btn-primary btn-sm ms-auto" asp-controller="Admin" asp-action="Index" class="btn btn-sm btn-danger">Voltar</a>

                        </div>
                    </div>
                    @if (Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <table class="table align-items-center mb-0">
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User ID</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User Name</th>
                                </tr>
                            
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.UserName</td>
                                        <td>
                                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    Deletar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                
                            </table>  
                        }
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-header">
                                Não existem usuários
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    Clique no botão para criar um usuário
                                </h5>
                                <a class="btn btn-primary" style="width:auto"
                               asp-controller="Account" asp-area="" asp-action="Register">
                                    Novo Usuário
                                </a>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>